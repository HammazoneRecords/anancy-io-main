# Production environment variables
# Copy this file to .env.production and update values

# Application
ENVIRONMENT=production
LOG_LEVEL=info
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-change-this
FLASK_SECRET_KEY=your-flask-secret-key-here-change-this

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Database (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/anancyio

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# External Services
SEARXNG_URL=http://searxng:8080
SENTRY_DSN=your-sentry-dsn

# Watchtower (optional - for auto updates)
WATCHTOWER_NOTIFICATIONS=
WATCHTOWER_NOTIFICATION_URL=

# Backup
BACKUP_RETENTION_DAYS=7

# SSL (if using Let's Encrypt or custom certs)
SSL_CERT_EMAIL=admin@anancyio.ai
